.post
  .bg-white.p-3.feed-item.rounded-4.mb-3.shadow-sm
    .d-flex.align-items-center.justify-content-between
      %a.text-decoration-none.d-flex.align-items-center{:href => "#"}
        .logo.me-3{style: 'width:50px;'}
          = image_tag post.structure.get_logo_url([150,150]), class: "img-fluid rounded-circle user-img"

        %h6.fw-bold.mb-0.text-body= post.structure_name

      .date
        %p.text-muted.mb-0= l post.created_at.to_date, format: :short

    .my-2.pt-3.border-top

      %h5.mb-3= post.title

      .content
        - if post.content.length > 250
          = truncate(strip_tags(post.content), length: 250, omission: "..." , escape: false)

          = link_to '#', class: "read-more read-more-#{post.id}", data: {replace: post.content.html_safe} do
            En lire plus...

        - else
          = post.content.html_safe

    - unless post.files.blank?
      .my-2
        %h5 Pi√®ces jointes
        %ul.list-inline
          - post.files.each do |file|
            %li.list-item
              = link_to url_for(file), class: "btn btn-link btn-sm" do
                = icon "fa", "download"
                = file.filename
