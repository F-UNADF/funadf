<script type="text/javascript">
  $(document).ready(function(){
    var sources = [
      <%- @intranet_structure.categories.each do |category| %>
        {
          url: '/events.json?category_id=<%= category.id %>',
          color: "<%= category.color %>",
          textColor: "<%= category.font_color %>"
        },
      <%- end %>
    ];

    init_fullCalendar('#calendar', sources, <%= current_user.is_admin? %>);
  })
</script>