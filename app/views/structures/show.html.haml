.breadcrumbs
  .page-header
    %h1
      Gestion de la structure
      %b= @structure.name


.content.mt-3
  .container-fluid
    .row
      .col-3
        = render "structures/infos", structure: @structure

      .col-md-9

        .card
          .card-header
            %ul.nav.nav-pills
              %li.nav-item
                = link_to structure_path(@structure), class: "nav-link #{'active' if params[:controller] == 'structures'}" do
                  Ma structure
              %li.nav-item
                = link_to '#associations', id: 'associations-tab', class: 'nav-link',  data: {toggle: "tab"}, aria: {controls: "associations", selected: "false"} do
                  Mes associations


          .card-body
