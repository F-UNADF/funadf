.breadcrumbs
  .page-header
    %h1
      Gestion de la structure
      %b= @structure.name


.content.mt-3
  .container-fluid
    .row
      .col-md-12
        = render 'structures/infos', structure: @structure

      .col-md-12
        .card
          .card-header
            = render 'structures/navbar'


          .card-body
            .table-responsive
              %table.table.table-striped.table-sm
                %thead
                  %tr
                    %th Identifiant
                    %th Nom
                    %th Email
                    %th Téléphone
                    %th Rôle

                - @is_members.each do |member|
                  %tr
                    %td= member.friendly_id
                    %td= member.name
                    %td= member.email
                    %td= member.phone_1
                    %td= member.get_resource_role(@structure)



            = will_paginate @is_members