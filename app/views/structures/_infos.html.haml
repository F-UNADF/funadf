.card
  .card-header
    La structure
  .card-body
    .logo.w-50.mb-5.mx-auto.text-center
      = image_tag structure.get_logo_url([150,150]), class: "rounded-circle img-fluid"

    %strong= structure.name
    %br
    = structure.full_address
    %hr
    %ul.fa-ul.mb-3
      - if structure.email?
        %li
          = icon 'fa', 'envelope', class: "fa-li"
          = link_to "mailto:#{structure.email}" do
            = structure.email

      - if structure.phone_1?
        %li
          = icon 'fa', 'phone', class: "fa-li"
          = structure.phone_1
      - if structure.phone_2?
        %li
          = icon 'fa', 'phone', class: "fa-li"
          = structure.phone_2

  .card-footer
    - if can? :cru, structure
      = link_to edit_path, class: 'btn btn-sm btn-outline-dark btn-icon' do
        = icon 'fa', "edit"
        Modifier ces infos