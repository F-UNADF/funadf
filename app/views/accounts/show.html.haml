.breadcrumbs
  .page-header
    %h1 Mon compte

.content.mt-3
  .container-fluid
    .row
      .col-md-4
        .client.card
          .card-body
            .mx-auto.d-block
              .text-center
                .client-title.mt-2.mb-1
                  %h3= @user.fullname
                  %p
                    = icon 'fa', 'id-card'
                    = @user.friendly_id
              .client-info
                %address
                  - unless @user.full_address.blank?
                    = @user.full_address
                    %hr

                  %ul.fa-ul
                    %li
                      = icon 'fa', 'envelope', class: "fa-li"
                      = link_to "mailto:#{@user.email}" do
                        = @user.email

                    - if @user.phone_1?
                      %li
                        = icon 'fa', 'phone', class: "fa-li"
                        = @user.phone_1
                    - if @user.phone_2?
                      %li
                        = icon 'fa', 'phone', class: "fa-li"
                        = @user.phone_2

                    - if @user.birthdate?
                      %li
                        = icon 'fa', 'birthday-cake', class: "fa-li"
                        = l @user.birthdate

          .card-footer
            = link_to edit_me_path, class: 'btn btn-outline-dark btn-icon' do
              = icon 'fa', "edit"
              Modifier mon profil

      .col-md-8
        .card
          .card-header
            %h2.h4 Je suis membre de :

          .card-body
            %table.table.table-striped.table-sm
              %thead
                %tr
                  %th
                  %th Nom
                  %th Ville
                  %th Rôle
                  %th

              - @structures.each do |structure|
                %tr
                  %td= icon 'fa', "#{structure.get_icon}"
                  %td= structure.name
                  %td= structure.town
                  %td= structure.get_resource_role(@user)
                  %td
                    %ul.list-inline.mb-0
                      - if can? :cru, structure
                        %li.list-inline-item
                          = link_to structure_has_memberships_path(structure), class: "btn btn-sm btn-info" do
                            = icon 'fa', "eye"
                            Gérer la structure

